<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ourbook"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        >
        <activity
            android:name="com.example.ourbook.MainActivitytivty"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.ourbook.Search" >
         </activity>
         <activity android:name="com.example.ourbook.LoginActivity" >
         </activity>
         <activity android:name="com.example.ourbook.BorrowedActivity" >
         </activity>
        <activity android:name="com.example.ourbook.SearchBookDetail" >
         </activity>
         <activity android:name="com.example.ourbook.Collect" >
         </activity>
         <receiver android:name="com.example.ourbook.BootReceiver"> 
			<intent-filter> 
 				<!-- 系统启动完成后会调用--> 
				<action android:name="android.intent.action.BOOT_COMPLETED"> 
 				</action> 
 			</intent-filter> 
		</receiver> 
    </application>

</manifest>
